EX3:

#include <stdio.h>

int main() {

    int num1;
    int num2;
    int sum;

  printf("##########Console-output###\n");
  printf("Enter two integers:");
  scanf("%d",&num1);
  scanf("%d",&num2);
  sum=num1+num2;
  printf("Sum:%d\n",sum);
  printf("###########################\n");
  printf("\n");
  printf("########################################################################");
  return 0;
}

