    int num ;

  printf("##########Console-output###\n");
  printf("Enter a integer:");
  scanf("%d",&num);
  printf("You entered:%d\n",num);
  printf("###########################\n");
  printf("\n");
  printf("########################################################################");
  return 0;
}

