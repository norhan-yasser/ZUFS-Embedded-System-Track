EX4:

#include <stdio.h>

int main() {

    float num1;
    float num2;
    float Product;

  printf("##########Console-output###\n");
  printf("Enter two numbers:");
  scanf("%f",&num1);
  scanf("%f",&num2);
  Product = num1 * num2;
  printf("Product:%f\n",Product);
 
  printf("########################################################################");
  return 0;
}


